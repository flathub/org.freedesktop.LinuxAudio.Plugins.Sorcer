{
    "id": "org.freedesktop.LinuxAudio.Plugins.Sorcer",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk//21.08",
    "build-extension": true,
    "appstream-compose": false,
    "branch": "21.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/Sorcer",
        "prepend-pkg-config-path": "/app/extensions/Plugins/Sorcer/lib/pkgconfig"
    },
    "cleanup": [
        "/lib/lv2"
    ],
    "modules": [
        "shared-modules/linux-audio/lv2.json",
        {
            "name": "ntk",
            "buildsystem": "simple",
            "build-commands": [
                "python3 ./waf configure --prefix=${FLATPAK_DEST} --libdir=lib",
                "python3 ./waf",
                "python3 ./waf install"
            ],
            "cleanup": [
                "/lib",
                "/include",
                "/bin"
            ],
            "post-install": [
                "rm ${FLATPAK_DEST}/lib/*.so*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/falkTX/ntk.git",
                    /* ~1.3.1000 */
                    "commit": "dae177189b12f74ea01ac2389b76326c06d9be78"
                }
            ]
        },
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/include",
                "mv boost ${FLATPAK_DEST}/include"
            ],
            "cleanup": [
                "/include"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://boostorg.jfrog.io/artifactory/main/release/1.78.0/source/boost_1_78_0.tar.bz2",
                    "sha256": "8681f175d4bdb26c52222665793eef08490d7758529330f98d3b29dd0735bccc"
                }
            ]
        },
        {
            "name": "sorcer",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "install -Dm644 --target-directory=${FLATPAK_DEST}/share/metainfo org.freedesktop.LinuxAudio.Plugins.Sorcer.metainfo.xml",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Plugins.Sorcer --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Plugins.Sorcer"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/openAVproductions/openAV-Sorcer/archive/release-1.1.3.tar.gz",
                    "sha256": "a055c9d1cb1371e32acdd69fd58af9577611ea1a09e19c15611d548e84c43e1e"
                },
                {
                    "type": "patch",
                    "path": "patches/sorcer-lv2.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/sorcer-link.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/sorcer-aarch64.patch"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.Sorcer.metainfo.xml"
                }
            ]
        }
    ]
}
